{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "ESNext",
    "types": ["vitest/globals"],
    "baseUrl": "./",
    "paths": {
      "@src/*": ["src/*"],
      "@test/*": ["test/*"]
    },
    "rootDir": ".", 
    "outDir": "./dist",
    "strict": true,
    "declaration": true
  },
  "include": ["src/**/*", "test/**/*"],  
  "exclude": ["node_modules"]
}
